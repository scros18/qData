# Normalize line endings
* text=auto

# Shell scripts should use LF
*.sh text eol=lf

# Windows scripts use CRLF
*.ps1 text eol=crlf
*.bat text eol=crlf

# Source files
*.ts text
*.tsx text
*.js text
*.jsx text
*.json text
*.css text
*.md text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
